
<div class="row">
  <div class="span11">
    <h1 >Listing Photos</h1>  
  </div>
  <div class="span1">
    <%- if current_user %>
      <%= link_to '+ New', new_photo_path, class: "btn btn-success" %>
    <% end %>
  </div>
</div>
<table class="table table-bordered">
  <thead>
    <tr>  
      <th>Picture</th>
      <th>Title</th>
      <th>User</th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= image_tag photo.url, width: 100 %></td>
        <td><%= link_to photo.title, photo %></td>
        <td><%= link_to photo.user.email, photo.user %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>


